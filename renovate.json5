{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekends",
    "github>aquaproj/aqua-renovate-config#2.3.1",
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
    },
    {
      // Golang のパッケージ更新は一緒に行う
      "groupName": "go packages",
      "matchManagers": ["gomod"],
    },
  ],
}
